@model AURA.Models.PostFiv

@{
    ViewData["Title"] = "FivCreate";
}

    <head>
        <style>
            div.form-group {
                margin-bottom: 0rem;
            }
        </style>
    </head>


<h4>ADD 5/</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FivCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FivZero" class="control-label"></label>
                <input asp-for="FivZero" class="form-control" readonly="readonly" value="@ViewBag.zero" />
                <span asp-validation-for="FivZero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FivDigit" class="control-label"></label>
                <input asp-for="FivDigit" class="form-control" readonly="readonly" value="0"/>
                <span asp-validation-for="FivDigit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FivPrio" class="control-label"></label>
                <input asp-for="FivPrio" class="form-control" value="5" />
                <span asp-validation-for="FivPrio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FivCode" class="control-label"></label>
                <input asp-for="FivCode" class="form-control" value="D"/>
                <span asp-validation-for="FivCode" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:1rem;">
                <label asp-for="FivText" class="control-label"></label>
                @*<input asp-for="FivText" class="form-control" />*@
                <textarea asp-for="FivText" class="form-control"></textarea>
                <span asp-validation-for="FivText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PostDetail" asp-route-zero="@ViewBag.zero">Back to Detail</a>
</div>

