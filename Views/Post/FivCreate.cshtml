@model AURA.Models.PostFiv

@{
    ViewData["Title"] = "FivCreate";
}

<head>
    <style>
        div.form-group {
            margin-bottom: 0rem;
        }
    </style>
</head>


<h4>ADD 5/</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FivCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FivZero" class="control-label"></label>
                <input asp-for="FivZero" class="form-control" readonly="readonly" value="@ViewBag.zero" />
                <span asp-validation-for="FivZero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FivDigit" class="control-label"></label>
                <input asp-for="FivDigit" class="form-control" readonly="readonly" value="0" />
                <span asp-validation-for="FivDigit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FivPrio" class="control-label"></label>
                @*<input asp-for="FivPrio" class="form-control" value="@ViewBag.priority" />*@
                <select asp-for="FivPrio" class="form-control" style="width:75px">
                    <option>@ViewBag.priority</option>
                    <option>0</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                </select>
                <span asp-validation-for="FivPrio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FivCode" class="control-label"></label>
                @*<input asp-for="FivCode" class="form-control" value="@ViewBag.code" />*@
                <select asp-for="FivCode" class="form-control" style="width:75px">
                    <option>@ViewBag.code</option>
                    <option>A</option>
                    <option>B</option>
                    <option>C</option>
                    <option>D</option>
                    <option>E</option>
                    <option>F</option>
                    <option>G</option>
                    <option>H</option>
                    <option>I</option>
                    <option>J</option>
                    <option>K</option>
                    <option>L</option>
                    <option>M</option>
                    <option>N</option>
                    <option>O</option>
                    <option>P</option>
                    <option>Q</option>
                    <option>R</option>
                    <option>S</option>
                    <option>T</option>
                    <option>U</option>
                    <option>V</option>
                    <option>W</option>
                    <option>X</option>
                    <option>Y</option>
                    <option>Z</option>
                </select>
                <span asp-validation-for="FivCode" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:1rem;">
                <label asp-for="FivText" class="control-label"></label>
                @*<input asp-for="FivText" class="form-control" />*@
                <textarea asp-for="FivText" class="form-control" ro></textarea>
                <span asp-validation-for="FivText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PostDetail" asp-route-zero="@ViewBag.zero">Back to Detail</a>
</div>



@if (ViewBag.code = "I")
{
    <button onclick="qmatFunc()">QMAT</button>
    <script>
        function qmatFunction() {
        document.getElementById("FivText").value = document.getElementById("FivText").value + "QMAT/_";
    }
    </script>
}

