@model AURA.ViewModels.PostDetailVM

@{
    ViewData["Title"] = "PostDetail";
}

<head>
    <style>
        table {
            background-color: lightblue;
        }

        tr {
        }

        .table td {
            padding: 0rem;
        }

        p {
            padding: 0rem;
            margin-bottom: 0rem;
        }
    </style>

</head>

<h1>@Model.OneZero</h1>

<div class="col-6 text-right">
    <a class="btn btn-primary" asp-action="DownloadPostDetailCommaSeperatedFile" asp-route-zero="@Model.OneZero"><i class="fa fa-plus"></i>Export CSV</a>
</div>

<div class="col-6 text-right">
    <a class="btn btn-primary" asp-action="CreateSelectPdf" asp-route-zero="@Model.OneZero"><i class="fa fa-plus"></i>Export PDF</a>
</div>      

<p>
    
    <span>
        @Html.DisplayFor(model => model.OneStag) | @Html.DisplayFor(model => model.OneAgen) | @Html.DisplayFor(model => model.OnePart)
    </span>

</p>
<p>
    @Html.DisplayFor(model => model.OneTitl)
</p>

<div>
    <a asp-action="OneEdit" asp-route-id="@Model.OneId" asp-route-zero="@Model.OneZero">Edit 1/</a> |
</div>

@*LIST OF THR*@
<hr />

<p>
    <span><b>TIMEFRAMES</b></span>
    <a asp-action="ThrCreate" asp-route-zero="@Model.OneZero">ADD 3/</a>
</p>
@foreach (var item in Model.PostThrs)
{
    <p>
        <span><a asp-action="ThrEdit" asp-route-id="@item.ThrId">Edit</a></span><nbsp> </nbsp>|
        <span>@Html.DisplayFor(modelItem => item.ThrDigit)</span>.<nbsp> </nbsp>
        <span>@Html.DisplayFor(modelItem => item.ThrDate)</span><nbsp> </nbsp>|
        <span>@Html.DisplayFor(modelItem => item.ThrText)</span>
    </p>

}


