@model IEnumerable<AURA.Models.ProductList>

@{
    ViewData["Title"] = "SevProductList";
}

<h4>Select a product to add to Post, or add a custom product</h4>

<p>
    <a asp-action="SevCreate" asp-route-zero="@ViewBag.zero" asp-route-stage="@ViewBag.stage" asp-route-partyid="@ViewBag.partyid">CUSTOM ACCOUNTING LINE</a>
</p>

<table class="table">
   
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FractionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>*@
