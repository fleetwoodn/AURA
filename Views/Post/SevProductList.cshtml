                | <a asp-action="SevCreate" asp-route-zero="@ViewBag.zero" asp-route-stage="@ViewBag.stage" asp-route-partyid="@ViewBag.partyid" asp-route-ac1="1100" asp-route-ac2="@item.AccountNumber" asp-route-acf="@item.FractionId" asp-route-desc="@item.ProductDescription" asp-route-amount="@item.ListPrice" asp-route-hidden="FALSE">SELECT</a>
            </td>
        </tr>
}
    </tbody>
</table>
