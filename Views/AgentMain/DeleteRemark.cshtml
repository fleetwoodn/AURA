@model AURA.Models.AgentsRemarks

@{
    ViewData["Title"] = "DeleteRemark";
}

<h1>DeleteRemark</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>AgentsRemarks</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RemarkSubject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RemarkSubject)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RemarkText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RemarkText)
        </dd>
    </dl>
    
    <form asp-action="DeleteRemark">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <div>
            <a asp-action="AgentDetail" asp-route-UserId="@Model.UserId">Back to Detail</a>
        </div>

    </form>
</div>
